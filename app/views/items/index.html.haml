%h1 Listing items

%table
  %tr
    %th Name
    %th Next Date
    %th Value

  - @items.each do |item|
    %tr
      %td= link_to item.name, item
      %td= "Next Appearance"
      %td.span-3.dollar-value= number_to_currency(item.value) + tag_value(item.item_type)
				


%br

= link_to 'New Item', new_item_path
